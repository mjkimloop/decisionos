{
  "version": "v2",
  "latency": {
    "max_p95_ms": 900,
    "max_p99_ms": 1800,
    "min_samples": 1000
  },
  "error": {
    "max_error_rate": 0.01,
    "min_samples": 1000
  },
  "witness": { "require_csv_sha256": true, "require_signature": true, "min_rows": 1 },
