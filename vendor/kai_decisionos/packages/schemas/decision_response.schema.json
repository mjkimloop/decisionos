{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://decisionos.io/schemas/decision_response.json",
  "title": "Decision Response Schema",
  "description": "Schema for decision API responses",
  "type": "object",
  "properties": {
    "action": {
      "$ref": "action_output.schema.json"
    },
    "decision_id": {
      "type": "string",
      "description": "Unique decision identifier",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
    }
  },
  "required": ["action", "decision_id"],
  "additionalProperties": false
}
